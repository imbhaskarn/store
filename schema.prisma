datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id        String    @id @default(cuid())
  firstName String    @default("")
  lastName  String    @default("")
  email     String    @unique @default("")
  address   Address?  @relation("Address_user")
  mobile    String    @unique @default("")
  password  String
  createdAt DateTime? @default(now())
}

model Product {
  id              String  @id @default(cuid())
  name            String  @default("")
  price           Int
  description     String  @default("")
  image_filesize  Int?
  image_extension String?
  image_width     Int?
  image_height    Int?
  image_id        String?
  tags            Tag[]   @relation("Product_tags")
}

model Address {
  id              String  @id @default(cuid())
  address         String  @default("")
  pincode         String  @default("")
  city            String  @default("")
  image_filesize  Int?
  image_extension String?
  image_width     Int?
  image_height    Int?
  image_id        String?
  user            User?   @relation("Address_user", fields: [userId], references: [id])
  userId          String? @unique @map("user")
}

model Tag {
  id       String    @id @default(cuid())
  name     String    @default("")
  products Product[] @relation("Product_tags")
}
